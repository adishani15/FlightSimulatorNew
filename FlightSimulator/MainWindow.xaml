<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator"
        xmlns:Controls ="clr-namespace:FlightSimulator.Views"

       
      
        mc:Ignorable="d"
        
        
        Title="MainWindow" Height="530" Width="800">
    <Grid>
        <TabControl Height="530" Width="400" HorizontalAlignment="Right">
            <TabItem Header="Manual" >
                <Controls:Joystick Margin="-200">
                </Controls:Joystick>
            </TabItem>
            <TabItem Header="Auto Pilot">
                <Controls:Auto Margin="-200">
                </Controls:Auto>

            </TabItem>

        </TabControl>
        <TabControl Height="530" Width="400" HorizontalAlignment="Left">
            <Controls:MyFlightBorder Margin="-200">
            </Controls:MyFlightBorder>


        </TabControl>

    </Grid>
</Window>