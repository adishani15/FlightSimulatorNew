<UserControl x:Class="FlightSimulator.Views.Auto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local ="clr-namespace:FlightSimulator"
        xmlns:vm ="clr-namespace:FlightSimulator.ViewModels"
        mc:Ignorable="d" Height="450" Width="800">


    <UserControl.Resources>
        <vm:AutoVM x:Key="vm1"/>
    </UserControl.Resources>

    <Grid>
         
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBox Name="MyTextBox"  Grid.RowSpan="3" Margin="209,23,213,24.333"/>
        
        <Button  Content="Clear" Height="40" Width="120"  Margin="419,111.667,261,73" Grid.Row="2" Background="Coral" FontSize="16" FontWeight="Bold" Grid.RowSpan="2"/>
        <StackPanel>
            <Button  Content="OK" CommandParameter="{Binding Text, ElementName=MyTextBox}" Command="{Binding Path=ConnectCommand, Source={StaticResource vm1}}"  Height="40" Width="120" Background="Coral" FontSize="16" FontWeight="Bold" Margin="340,0"/>
        </StackPanel>
    </Grid>
</UserControl>
