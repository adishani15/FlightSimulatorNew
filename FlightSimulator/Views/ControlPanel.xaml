<UserControl x:Class="FlightSimulator.Views.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             xmlns:Controls ="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl Height="530" Width="500" HorizontalAlignment="Right">
            <TabItem Header="Manual" >
                <Controls:Joystick Margin="-200">
                </Controls:Joystick>
            </TabItem>
            <TabItem Header="Auto Pilot">
                <Controls:Auto Margin="-200">
                </Controls:Auto>

            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
